{

  "builds": [
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist",
        "buildCommand": "npm run build"
      }
    }

  ],


  "rewrites": [

    {
      "source": "/api/(.*)",
      "destination": "/api"
    },

    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ]
}